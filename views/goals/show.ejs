<%- include('../partials/header.ejs', {user}) %>

<div></div>
<p>You are signed in as <%= user %></p>

<!-- Button trigger modal -->
<div class="text-center">
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
   Choose a Photo
</button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Please select a photo header for your goal.</p>
            <form method="POST" action="/goals/<%= goal.id %>">
                <input class="form-check-input flex-wrap" type="radio" name="flexRadioDefault" id="<%= photo.id %>">
                <input type="text" class="form-control shadow-sm" name="photoSearch" placeholder="Search 'workout'">
                <button class="btn btn-primary" name="search">Search</button>
            
            <% photo.forEach(photo => { %>
                <label class="my-2 d-flex">
                    <img src="<%= photo.urls.regular %>&fm=jpg&w=150&fit=max&h=75" id="<%= photo.id %>>" type="radio">
                </label>
            <% }) %>
        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="savePhoto">Save Photo</button>
        </div>
      </div>
    </div>
  </div>

<img src="..." class="img-fluid" alt="...">

<div class="container text-center">
    <div class="row">
      <div class="col-2 border border-1">
        <h4>Project Name: associated with goal</h4>
        <h5>Other Goals: associated with this project</h5>
      </div>
      <div class="col-4 border border-1">
        <h2>Goal: <%= goal.name %></h2>
        <p>Project Description: <%= goal.description %></p>
        <p>Due Date: <%= goal.due_date %></p>

        <form method="POST" action="/goals/<%= goal.id %>?_method=DELETE">
            <label for="delete">Delete Goal</label>
            <button class="btn btn-dark" type="submit" id="delete" name="_method">Delete</button>
            </form>
            
            <a href="/goals/<%= goal.id %>/edit"><button class="btn btn-dark"  type="submit" id="update" name="update">Update Goal</button></a>
      </div>
      <div class="col-6 border border-1">
        <h3>All tasks</h3>
      </div>

      <div class="row justify-content-center ms-1">
        <div class="col-12 border border-1 text-center">
            <h2>Blog here</h2>
        </div>
      </div>
    </div>
  </div>

<%- include('../partials/footer.ejs') %>
