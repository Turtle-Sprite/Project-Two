<%- include('../partials/header.ejs', {user}) %>

<div></div>
<p>You are signed in as <%= user %></p>

<div class="row justify-content-center headerPhoto">
<img src="<%= goal.img_url %>" class="goalheaderimg shadow-lg" alt="...">
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-md-2 border border-1">
      <h5>Project Name: associated with goal</h5>
      <h6>Other Goals: associated with this project</h6>
    </div>
    <div class="col-md-4 border border-1">
      <h2>Goal: <%= goal.name %></h2>
      <p>Project Description: <%= goal.description %></p>
      <p>Due Date: <%= goal.due_date %></p>
      <p>Goal Progress: <%= goal.complete %></p>
      <p>Who can see goal: <%= goal.public %></p>

      <form method="POST" action="/goals/<%= goal.id %>?_method=DELETE">
          <label for="delete">Delete Goal</label>
          <button class="btn btn-dark" type="submit" id="delete" name="_method">Delete</button>
          </form>
          
          <a href="/goals/<%= goal.id %>/edit"><button class="btn btn-dark"  type="submit" id="update" name="update">Update Goal</button></a>
    </div>
    <div class="col-md-6 border border-1">
      <h3>All tasks</h3>
    </div>

    <div class="row justify-content-center ms-1">
      <div class="col-md-12 border border-1 text-center">
          <h2>Blog here</h2>
      </div>
    </div>
  </div>
</div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
    <p>Please select a photo header for your goal.</p>
    <form method="POST" action="/goals/<%= goal.id %>">
          <input type="text" class="form-control shadow-sm" name="photoSearch" placeholder="Search 'workout'">
          <button class="btn btn-primary my-3" name="search">Search</button>
    </div>
    </div>
    <div class="container text-center bg-secondary bg-gradient">
      <% photo.forEach(photo => { %>
        <label class="m-1">
          <input type="radio" id="<%= photo.id %>" name="images" value="<%= photo.urls.regular %>">
              <img src="<%= photo.urls.regular %>&fm=jpg&w=200&fit=max&h=150" id="<%= photo.id %>>" class="images" alt="<%= photo.description %>" class="img-thumbnail">
        </label>
      <% }) %>
      <button type="submit" class="btn btn-primary my-3">Select Photo</button>
    </div>
  </form>
</div>
<%- include('../partials/footer.ejs') %>
