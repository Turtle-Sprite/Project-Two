          <div class="col-11"><input id="${id}" type="text" class="list-group-item-md list-group-item-action" value="${input.value}" disabled>
          </div>
          <div class="col-1 align-self-start">
          <input id="${id}" style="margin: 0; padding:0;width:25px; height:25px" class="form-check-input checkbox" type="checkbox" value="" aria-label="Checkbox">
