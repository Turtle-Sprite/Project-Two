<%- include('../partials/header.ejs', {user}) %>
<!-- This page is linked by the href in the a tag surrounding the update button on the goal show page -->
<div class="card mb-3 ">
    <img src="<%= goal.img_url %>" class="goalheaderimg shadow-lg" alt="...">
    <div class="card-img-overlay">
      <a href="/goals/<%= goal.id %>/photo "><button class="btn btn-sm btn-light border">Update Photo</button></a>
    </div>
    <div class="card-body">
        <h2>Update <%= goal.name %></h2>
    </div>
  </div>

<div class="container mt-3 mb-3">
    <div class="row d-flex justify-content-center mt-2">
        <div class="col-md-10 rounded p-2 shadow-lg">
            <div class="card-body card p-3">
                <!-- PUT FORM for goal Data -->
                <form method="POST" action="/goals/<%= goal.id %>?_method=PUT">
                        
                    <div class="row gy-2 gx-3 align-items-center">
                    <legend class="fw-bold">Update Goal</legend>

                    <label for="name" class="form-label fw-bold">Goal name</label>
                    <input type="text" class="form-control shadow-sm" id="name" name="name"
                        value="<%= goal.name %>" required>
                    <label for="description" class="form-label fw-bold">Describe Event</label>
                    <textarea type="text" class="form-control shadow-sm" id="description" name="description"
                        cols="5" rows="3" required><%= goal.description %></textarea>

                    <label for="dueDate" class="form-label fw-bold">Due Date</label>
                    <input type="date" class="form-control shadow-sm" id="dueDate" name="dueDate"
                        value="<%= goal.due_date %>" required>

                    <label for="progress fw-bold">Update goal's progress:</label>
                    <select class="form-select form-select-md mb-2" aria-label=".form-select-lg example"
                        id="progress" name="progress" required>
                        <option selected>Update Progress</option>
                        <option value="Not-Started">Not Started</option>
                        <option value="In-Progress">In Progress</option>
                        <option value="Complete">Complete</option>
                    </select>

                    <label for="projectAdd fw-bold">Which project is this goal a part of?:</label>
                    <select class="form-select form-select-md mb-2" aria-label=".form-select-lg example"
                        id="progress" name="projectAdd" required>
                        <option selected>Select</option>
                        <option value="1">Turtle Pond Takeover</option>
                        <option value="2">Project 2</option>
                        <option value="3">Cat Party</option>
                    </select>

                    <div class="col-auto">
                        <label for="public" class="form-label fw-bold" required>Public or Private?</label>
                        <div class="mx-2">
                            <input type="radio" id="public" name="public" value="Public" class="mx-2"
                                checked>
                            <label for="Public">Public</label>
                            <input type="radio" id="private" name="public" value="Private" class="mx-2">
                            <label for="Private">Private</label>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark shadow-sm" id="update">Update
                            Goal</button>
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    <%- include('../partials/footer.ejs') %>