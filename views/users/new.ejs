<%- include('../partials/header.ejs', {user}) %>

<div class="m-3">
    <h1 class="p-2">Sign up for an Account</h1>
</div>

<div class="container">
    <div class="row justify-content-center my-3">
        <div class="col-lg-6">
            <form action="/users" method="POST">
                <div class="col-auto m-2 shadow-sm"> 
                    <label for="fName" class="form-label"> First Name: </label>
                    <input type="fName" class="form-control shadow-sm" name="fName" id="fName" required>
                </div>
                <div class="col-auto m-2 shadow-sm"> 
                    <label for="lName" class="form-label"> First Name: </label>
                    <input type="lName" class="form-control shadow-sm" name="lName" id="lName" required>
                </div>

                <div class="col-auto m-2 shadow-sm"> 
                    <label for="email" class="form-label"> Email: </label>
                    <input type="email" class="form-control shadow-sm" name="email" id="email" required>
                </div>

                <div class="col-auto m-2 shadow-sm"> 
                    <label for="password" class="form-label"> Password: </label>
                    <input type="password" class="form-control shadow-sm" name="password" id="password" required />
                </div>

                <div class="col-auto m-2 shadow-sm"> 
                    <label for="bio" class="form-label">About Me</label>
                    <textarea type="text" class="form-control" id="bio" name="bio" placeholder="e.g. I like setting goals and accomplishing tasks"></textarea>
                </div>

                <button type="submit" class="btn btn-dark shadow-sm">Sign Up</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>