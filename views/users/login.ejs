<%- include('../partials/header.ejs', {user}) %>

<div class="m-3">
    <h1 class="p-2">Login </h1>
</div>

<% if (message) { %>
    <p><%= message %></p>
<% } %>
<div class="container">
<div class="row d-flex justify-content-center mt-2">
    <div class="col-md-7 rounded p-2">
        <div class="card-body card p-3 shadow-lg">
            <form action="/users/login" method="POST">
                <label for="email" class="form-label fw-bold"> Email: </label>
                <input type="email" class="form-control shadow-sm" name="email" id="email" required>

                <label for="password" class="form-label fw-bold"> Password: </label>
                <input type="password" class="form-control shadow-sm" name="password" id="password" required />

                <div class="row justify-content-center">
                    <button class="col btn btn-dark shadow-sm my-3" type="submit">Login</button>
                    <a href="/users/new"><p class="col">Or sign up</p></a>
                </div>
            </form>
        </div>
    </div>
</div>
</div>

<%- include('../partials/footer.ejs') %>