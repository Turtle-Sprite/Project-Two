<%- include('../partials/header.ejs', {user}) %>

<div class="row">
  <div class="col-5-md">
    <div class="card-body card p-3">
      <h2 class="card-title p-2"><% if ( user.name) { %>
        Thanks for logging in to the app, <%= user.name %>)! </h2>
      <% } else { %>
        Thanks for logging in to the app, <%= user.email %>! </h2>
      <% } %> 
    </div>
  </div>
</div>

<div class="row d-flex justify-content-center">
  <div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="..." class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>





  <% goal.forEach(goal =>{ %>
  <div class="col-md-4 rounded">
    <ul class="list-group p-3 rounded">
      <li class="list-group-item"><h2><span class="fw-bold">Goal:</span> <%= goal.name %></h2></li>
      <li class="list-group-item"><p><span class="fw-bold">Goal Description:</span> <%= goal.description %></p></li>
      <li class="list-group-item"><p><span class="fw-bold">Due Date:</span>
      </span> <%= goal.due_date %></p></li>
      <li class="list-group-item"><p><span class="fw-bold">Goal Progress:</span> <%= goal.complete %></p></li>
      <li class="list-group-item"><p><span class="fw-bold">Who can see goal:</span> <%= goal.public %></p></li>
    
    <li class="list-group-item">
      <div class="row">
        <div class="col-6">
        <form method="POST" action="/goals/<%= goal.id %>?_method=DELETE">
          <label for="delete"></label>
          <button class="btn btn-dark" type="submit" id="delete" name="_method">Delete</button>
        </form>
      </div>
        <div class="col-6">
          <a href="/goals/<%= goal.id %>/edit"><button class="btn btn-dark"  type="submit" id="update" name="update">Update Goal</button></a>
      </div>
    </div>
    </li>
  </ul>   
</div>
<% }) %>
</div>
</div>

<%- include('../partials/footer.ejs') %>