<%- include('../partials/header.ejs', {user}) %>

<div class="container mt-3 mb-3">
<div class="row d-flex justify-content-center mt-2">
  <div class="col-md-9 rounded p-2">
      <div class="card-body card p-3 shadow-lg">
        <h1>Choose a Photo Header</h1>
        <h3>Project name: <%= project.name %></h3>
        <p>Please search and click to select a photo for your project.</p>
        
        <form action="/projects/<%= project.id %>/photo" method="GET">
          <input type="text" class="form-control shadow-sm" name="photoSearch" placeholder="Search 'workout'">
          <div class="d-flex flex-row justify-content-center">
            <button class="btn btn-primary m-3">Search</button>
          </form>
          <form method="POST" action="/projects/<%= project.id %>/photo">
            <button type="submit" class="btn btn-primary m-3">Select Photo</button>
        </div>

        <div class="text-center border-2 bg-gradient">
          <% photo.forEach(photo => { %>
            <label class="m-1 fw-bold">
              <input type="radio" id="<%= photo.id %>" name="images" value="<%= photo.urls.regular %>" class="hideRadio">
                  <img src="<%= photo.urls.regular %>&fm=jpg&w=200&fit=max&h=150" id="<%= photo.id %>>" class="images img-thumbnail" alt="<%= photo.alt_description %>">
            </label>
          <% }) %>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs') %>