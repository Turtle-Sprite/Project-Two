<%- include('../partials/header.ejs', {user}) %>

    <div class="container">
        <div class="m-3">
            <h2 class="p-2">All Projects</h2>
        </div>

        <div class="list-group m-3">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Project</th>
                        <th scope="col">Due Date:</th>
                        <th scope="col">Project Progress:</th>
                    </tr>
                </thead>

                <% project.forEach(project=> { %>
                    <tbody>
                        <tr>
                            <th scope="row"></th>
                            <td>
                                <%= project.name %>
                            </td>
                            <td>
                                <%= project.due_date %>
                            </td>
                            <td>
                                <%= project.complete %>
                            </td>
                        </tr>
                    </tbody>
                    <% }) %>
            </table>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>